---
// Recibe las propiedades de cada producto
interface CardProps {
  title: string;
  subtitle: string;
  description: string;
  imageSrc: string;
  logoSrc: string;
  link: string;
}

const { title, subtitle, description, imageSrc, logoSrc, link } = Astro.props;
---

<div class="section-background">
  
		
  <div>
    <!-- Título y Subtítulo -->
  <div class="card-container">
    <!-- Imagen Principal -->
    <img src={imageSrc} alt={`${title} image`} class="main-image" />

    <!-- Contenido de la Tarjeta -->
    <div class="content">
      <!-- Título con Logo al Lado -->
      <div class="title-container">
        <h2 class="title">{title} <strong>{subtitle}</strong></h2>
        <img src={logoSrc} alt={`${title} logo`} class="logo" />
      </div>
      <p class="description">{description}</p>

      <!-- Botón Ver Más -->
      <a href={link} class="button">Ver Más</a>
    </div>
  </div>
</div>

<style lang="postcss">

  /* Seccion principal */
  .section-background {
    background-color: #3E3C3E; /* Color de fondo  */
    padding: 2rem 0; /* Espaciado superior e inferior para que no quede pegado */
    display: flex;
    justify-content: center;
  }

  /* Estilos de la tarjeta */
  .card-container {
    max-width: 400px;
    margin: 0 1rem; /* Espacio entre las tarjetas */
    border-radius: 8px;
    overflow: hidden;
    background-color: #ffffff;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  /* Imagen Principal */
  .main-image {
    width: 100%;
    height: 200px; /* Tamaño ajustado para que las imágenes sean grandes */
    object-fit: cover;
  }

  /* Contenido de la Tarjeta */
  .content {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  /* Título y Logo */
  .title-container {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .title {
    font-size: 1.25rem;
    font-family: var(--font-serif); /* Aplica la fuente Roboto */
  }

  .logo {
    width: 40px; /* Tamaño ajustado para el logo */
    height: auto;
  }

  /* Descripción */
  .description {
    font-family: var(--font-sans); /* Aplica la fuente Rubik */
    margin-top: 0.5rem;
    color: #3E3C3E;
  }

  /* Botón Ver Más */
  .button {
    margin-top: 1rem;
    padding: 0.5rem 1.5rem;
    background-color: #FF8730; /* Color de fondo del botón especificado */
    color: #ffffff;
    text-transform: uppercase;
    font-weight: bold;
    border-radius: 4px;
    transition: background-color 0.3s;
    
  }

  .button:hover {
    background-color: #3E3C3E; /* Cambio de color al pasar el ratón */
  }
</style>